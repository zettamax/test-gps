{
  "author": "Max Nazarov",

  "name": "GPS test tool",
  "short_name": "GPS test tool",
  "description": "Look the world around you",
  "version": "0.1",
  "start_url": "./",
  "homepage_url": "https://zettamax.github.io/test-gps/",

  "background": {
    "scripts": ["bg.js"]
  },

  "protocol_handlers": [
    {
      "protocol": "ext+geo",
      "name": "Geo protocol",
      "uriTemplate": "https://zettamax.github.io/test-gps/#!/%s"
    }
  ],

  "content_scripts": [
    {
      "exclude_matches": ["*://developer.mozilla.org/*"],
      "matches": ["*://*.mozilla.org/*"],
      "js": ["borderify.js"]
    }
  ],

  "default_locale": "en",

  "icons": [{
      "src": "icon128.png",
      "sizes": "128x128"
    },{
      "src": "icon144.png",
      "sizes": "144x144"
    }],
  "display": "fullscreen",

  "permissions": [
    "webNavigation",
    "background",
    "geolocation"
  ],

  "manifest_version": 2,

  "web_accessible_resources": ["images/my-image.png"]
}